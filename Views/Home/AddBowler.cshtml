@{
    ViewData["Title"] = "Add Bowler";

}

@model Bowler

<h2>Add Bowler:</h2>

<form method="post">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div>Bowler Information</div>

    <div class="form-group">
        <label asp-for="BowlerFirstName">First Name:</label>
        <input asp-for="BowlerFirstName" type="text" />
    </div>

    <div class="form-group">
        <label asp-for="BowlerMiddleInit">Middle Initial:</label>
        <input asp-for="BowlerMiddleInit" type="text" />
    </div>

    <div class="form-group">
        <label asp-for="BowlerLastName">Last Name:</label>
        <input asp-for="BowlerLastName" type="text" />
    </div>

    <div class="form-group">
        <label asp-for="BowlerAddress">Address:</label>
        <input asp-for="BowlerAddress" type="text" />
    </div>

    <div class="form-group">
        <label asp-for="BowlerCity">City:</label>
        <input asp-for="BowlerCity" type="text" />
    </div>

    <div class="form-group">
        <label asp-for="BowlerZip">Zip:</label>
        <input asp-for="BowlerZip" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="BowlerPhoneNumber">Phone Number:</label>
        <input asp-for="BowlerPhoneNumber" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="TeamID">Team:</label>
        <select asp-for="TeamID" type="text">
        @foreach(Team t in ViewBag.Teams)
            {
                <option value="@t.TeamID">@t.TeamName</option>
            }
        </select>
    </div>


    <div>
        <input class="btn btn-primary" type="submit" value="Submit" />
    </div>

</form>



