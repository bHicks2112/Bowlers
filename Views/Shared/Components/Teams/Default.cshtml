@{
}

@model IEnumerable<string>

<h1>@ViewBag.SelectedTeam</h1>

<div class="d-grid gap-2">

    <a asp-controller="Home" asp-action="Index" asp-route-bowlerTeam="" class="btn btn-outline-secondary">Home</a>

    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bowlerTeam="@t" class="btn @(ViewBag.SelectedTeam == t ? "btn-primary" : "btn-outline-secondary")">@t</a>

    }
</div>

  